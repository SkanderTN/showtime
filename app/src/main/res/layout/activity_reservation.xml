<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/bg_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="@string/profile_icon"
            android:tint="#FFFFFF"/>
    </androidx.appcompat.widget.Toolbar>
    <!-- ScrollView Content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Spectacle Image -->
            <ImageView
                android:id="@+id/imgSpectacle"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/spectacle_image"/>

            <!-- Spectacle Title -->
            <TextView
                android:id="@+id/tvSpectacleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spectacle Name"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="8dp"/>

            <!-- Date & Time -->
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 20/05/2025   ðŸ•’ 19:00"
                android:textColor="#FFEB3B"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="4dp"/>

            <!-- Lieu -->
            <TextView
                android:id="@+id/tvLieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ›ï¸ ThÃ©Ã¢tre de Carthage - Tunis"
                android:textColor="#FFEB3B"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvSpectacleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Date - ðŸ•’ Time - ðŸ›ï¸ Lieu"
                android:textSize="16sp"
                android:textColor="#FFEB3B"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>


            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’µ Price: 25 DT"
                android:textSize="18sp"
                android:textColor="#FFEB3B"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="8dp"/>

            <!-- Available Seats -->
            <TextView
                android:id="@+id/tvAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸª‘ Available Seats: 20"
                android:textSize="18sp"
                android:textColor="#FFEB3B"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="16dp"/>

            <!-- Spinner (Choose number of tickets) -->
            <Spinner
                android:id="@+id/spinnerTickets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffae42"
                android:layout_marginBottom="16dp"/>

            <!-- Total Price -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ§¾ Total: 25 DT"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginBottom="24dp"/>

            <!-- Confirm Button -->
            <Button
                android:id="@+id/btnConfirmReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Reservation"
                android:textColor="#1a1f38"
                android:backgroundTint="#ffae42"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="false"/>
        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
